<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title_Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="TextAppearance.TextMedium" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">#123</item>
        <item name="android:lineSpacingExtra">5.3sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ProgressDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Button_Normal" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="cornerRadius">24dp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="rippleColor">#ffffff</item>
    </style>

    <style name="Search">
        <item name="android:textColor">#818181</item>
        <item name="android:background">@drawable/bg_edt_search</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textCursorDrawable">@drawable/cusor_edt</item>
    </style>
</resources>